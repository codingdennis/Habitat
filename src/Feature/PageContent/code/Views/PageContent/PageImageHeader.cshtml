@using Fortis.Model
@using Fortis.Foundation.CodeGen.Templates.Feature.PageContent
@model IRenderingModel<IHasPageContent, IHasPageContent>

@if (Model.PageItem.Image.HasValue)
{
  var image = Model.PageItem.Image.GetSourceUri();
  <header class="page-header bg-media bg-parallax" style="background-image: url('@image')">
    @Html.Sitecore().Placeholder("page-header")
  </header>
}
else
{
  <header class="page-header">
    @Html.Sitecore().Placeholder("page-header")
  </header>
}