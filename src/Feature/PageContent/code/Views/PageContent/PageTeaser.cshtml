@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Repositories
@using Fortis.Model
@using Fortis.Foundation.CodeGen.Templates.Feature.PageContent.HasPageContent
@model IRenderingModel<IHasPageContent, IHasPageContent>

@if (!Model?.RenderingItem?.IsDerived(Static.ID) ?? true)
{
  @Html.PageEditorError(AlertTexts.InvalidDataSourceTemplate(Static.ID), AlertTexts.InvalidDataSourceTemplateFriendlyMessage, Model.PageItem?.ItemID, Model.RenderingItem?.ItemID)
    return;
}

<div class="thumbnail">
  <a href="@Model.RenderingItem.GenerateUrl()">
    @Model.RenderingItem.Image.Render(new { @class = "img-responsive", mw = 500 })
  </a>
  <div class="caption">
    <h3 class="teaser-heading">
      @Model.RenderingItem.Title
    </h3>
    <p>
      @Model.RenderingItem.Summary
    </p>
    <a href="@Model.RenderingItem.GenerateUrl()" class="btn btn-default">
            @Html.Sitecore().Dictionary("/PageContent/Teaser/Read more", "Read more")
    </a>
  </div>
</div>