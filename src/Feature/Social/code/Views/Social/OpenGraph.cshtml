@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Resources.Media
@using Fortis.Model
@using Fortis.Foundation.CodeGen.Templates.Feature.Social
@model IRenderingModel<IOpenGraph, IOpenGraph>
@if (Model.PageItem == null)
{
  @Html.PageEditorError(AlertTexts.InvalidDataSourceTemplate(OpenGraphConstants.TemplateID), AlertTexts.InvalidDataSourceTemplateFriendlyMessage, Model.PageItem?.ItemID, Model.RenderingItem?.ItemID)
  return;
}

<meta property="og:title" content="@Model.PageItem.OpenGraphTitle"/>
<meta property="og:image" content="@Model.PageItem.OpenGraphImage.GetSourceUri(new MediaUrlOptions
                                   {
                                     AbsolutePath = true
                                   })"/>
<meta property="og:description" content="@Model.PageItem.OpenGraphDescription"/>
<meta property="og:url" content="@Model.PageItem.GenerateUrl(true)"/>